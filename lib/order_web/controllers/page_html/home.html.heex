<.flash_group flash={@flash} />

<header class="bg-cream p-6 shadow-md">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-4xl font-bold text-orange-400">Meeting Minuet</h1>
    <nav class="space-x-6">
      <a
        :for={{text, href} <- [{"Home", "#"}, {"Features", "#"}, {"Contact", "#"}]}
        href={href}
        class="text-orange-500 hover:underline"
      >
        <%= text %>
      </a>
      <%= if @current_user do %>
        <span class="text-orange-300">
          <%= @current_user.email %>
        </span>
        <.link href={~p"/users/settings"} class="text-orange-500 hover:underline">
          Settings
        </.link>
        <.link href={~p"/users/log_out"} method="delete" class="text-orange-500 hover:underline">
          Log out
        </.link>
      <% else %>
        <.link href={~p"/users/register"} class="text-orange-500 hover:underline">
          Register
        </.link>
        <.link href={~p"/users/log_in"} class="text-orange-500 hover:underline">
          Log in
        </.link>
      <% end %>
    </nav>
  </div>
</header>
<!-- Main Content -->
<main class="container mx-auto my-12 flex flex-1 items-center justify-center">
  <!-- Branding Sections -->
  <div class="flex flex-col md:flex-row space-y-6 md:space-y-0 md:space-x-6">
    <!-- Branding Section 1 -->
    <section class="flex-1 bg-peach-100 text-slate-800 p-16 rounded-md shadow-lg">
      <h2 class="text-3xl font-semibold mb-4">Effortless Minute Taking</h2>
      <p class="text-lg">
        Record motions, votes, and meeting minutes in real time with ease. Let Meeting Minuet handle the documentation so you can focus on the discussion.
      </p>
    </section>
    <!-- Branding Section 2 -->
    <section class="flex-1 bg-peach-100 text-slate-800 p-16 rounded-md shadow-lg">
      <h2 class="text-3xl font-semibold mb-4">Real-Time Updates</h2>
      <p class="text-lg">
        See reports, minutes, and decisions unfold live. Engage your members with instant notifications for motions and voting.
      </p>
    </section>
    <!-- Branding Section 3 -->
    <section class="flex-1 bg-peach-100 text-slate-800 p-16 rounded-md shadow-lg">
      <h2 class="text-3xl font-semibold mb-4">Seamless Collaboration</h2>
      <p class="text-lg">
        Invite members, track attendance, and review meeting history effortlessly. Meeting Minuet brings order to your organizational needs.
      </p>
    </section>
  </div>
</main>
<!-- Footer -->
<footer class="bg-warm-gray-100 text-slate-600 py-4">
  <div class="container mx-auto text-center">
    <p>&copy; 2024 MeetingMinuet. All rights reserved.</p>
  </div>
</footer>

<style>
  /* Custom Pastel Colors */
  .bg-cream { background-color: #FFF8E1; }
  .bg-orange-100 { background-color: #FFE8D6; }
  .bg-peach-100 { background-color: #FFD7BA; }
  .bg-cream-200 { background-color: #FFF1E0; }
  .text-orange-400 { color: #FFA45B; }
  .text-orange-500 { color: #FF865E; }
</style>
